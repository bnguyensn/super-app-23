{
  "name": "react-graphql-js",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "@testing-library/user-event": "^12.6.0",
    "apollo-datasource-rest": "^0.9.7",
    "apollo-server": "^2.19.2",
    "got": "^11.8.1",
    "graphql": "^15.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^3.5.15",
    "react-scripts": "4.0.1",
    "uuid": "^8.3.2",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:e2e": "./node_modules/.bin/cypress open",
    "eject": "react-scripts eject",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "./node_modules/.bin/prettier --write \"{**/*,*}.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "server": "node ./server-graphql.js",
    "server:dev": "./node_modules/.bin/nodemon ./server-graphql.js"
  },
  "eslintConfig": {
    "plugins": [
      "cypress"
    ],
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "cypress/globals": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run format"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "apollo-server-testing": "^2.19.2",
    "cypress": "^6.2.1",
    "eslint-plugin-cypress": "^2.11.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
